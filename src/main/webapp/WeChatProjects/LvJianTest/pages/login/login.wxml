<!--login.wxml-->
<view class="LoginContainer">
  <text class="TitleStyle">相城绿建堆码系统</text>
  <form bindsubmit="systemLogin" >
    <view class="EmptyStyle"></view>
    <text>工号:</text>
    <input type='text' class="InputStyle" name='userid' placeholder="请输入工号"></input>
    <view class="EmptyStyle"></view>
    <text>密码:</text>
    <input type='password' class="InputStyle" name='password' placeholder="请输入账号密码"></input>
    <view class="EmptyStyle"></view>
    <button form-type="submit" type='primary'>登陆</button>
  </form>
</view>